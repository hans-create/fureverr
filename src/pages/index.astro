---
import Layout from '../layouts/Layout.astro';
import PetIcon from '../components/ui/PetIcon.astro';
import MemorialCard from '../components/ui/MemorialCard.astro';
import heroImage from '../components/memorial/public/images/hero-cat-sleeping.png';
import { HeartIcon, LockClosedIcon, CameraIcon, UserGroupIcon, SparklesIcon, PhotoIcon, EnvelopeIcon, BookmarkIcon } from '@heroicons/react/24/outline';

const memorials = [
  { name: 'Max', type: 'dog', tribute_count: 24, dateOfBirth: '2010-03-15', dateOfPassing: '2023-11-20', image: 'https://images.unsplash.com/photo-1558788353-f76d92427f16?auto=format&fit=crop&w=800' },
  { name: 'Luna', type: 'cat', tribute_count: 18, dateOfBirth: '2012-06-22', dateOfPassing: '2023-12-05', image: 'https://images.unsplash.com/photo-1514888286974-6c03e2ca1dba?auto=format&fit=crop&w=800' },
  { name: 'Charlie', type: 'bird', tribute_count: 12, dateOfBirth: '2015-09-10', dateOfPassing: '2023-10-15', image: 'https://images.unsplash.com/photo-1452570053594-1b985d6ea890?auto=format&fit=crop&w=800' },
  { name: 'Bella', type: 'dog', tribute_count: 21, dateOfBirth: '2011-04-30', dateOfPassing: '2023-09-28', image: 'https://images.unsplash.com/photo-1477884213360-7e9d7dcc1e48?auto=format&fit=crop&w=800' },
  { name: 'Oliver', type: 'cat', tribute_count: 15, dateOfBirth: '2014-07-12', dateOfPassing: '2023-11-30', image: 'https://images.unsplash.com/photo-1573865526739-10659fec78a5?auto=format&fit=crop&w=800' },
  { name: 'Rocky', type: 'dog', tribute_count: 19, dateOfBirth: '2013-02-28', dateOfPassing: '2023-10-22', image: 'https://images.unsplash.com/photo-1534361960057-19889db9621e?auto=format&fit=crop&w=800' },
  { name: 'Milo', type: 'rabbit', tribute_count: 14, dateOfBirth: '2018-05-15', dateOfPassing: '2023-12-10', image: 'https://images.unsplash.com/photo-1585110396000-c9ffd4e4b308?auto=format&fit=crop&w=800' },
  { name: 'Coco', type: 'dog', tribute_count: 22, dateOfBirth: '2012-11-03', dateOfPassing: '2023-11-15', image: 'https://images.unsplash.com/photo-1534551767192-78b8dd45b51b?auto=format&fit=crop&w=800' },
  { name: 'Lucy', type: 'cat', tribute_count: 16, dateOfBirth: '2015-08-20', dateOfPassing: '2023-12-01', image: 'https://images.unsplash.com/photo-1548546738-8509cb246ed3?auto=format&fit=crop&w=800' },
  { name: 'Bailey', type: 'dog', tribute_count: 20, dateOfBirth: '2014-01-25', dateOfPassing: '2023-10-30', image: 'https://images.unsplash.com/photo-1537151608828-ea2b11777ee8?auto=format&fit=crop&w=800' }
];
---

<Layout title="Home - Furever">
  <div class="min-h-screen bg-[your-background-color]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 space-y-16">
      
      {/* Hero Section */}
      <section class="relative min-h-[80vh] rainbow-bg">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center min-h-[calc(80vh-64px)]">
            <div>
              <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-4">
                Where Memories Find a Home
              </h1>
              <p class="text-xl md:text-2xl text-gray-600 mb-8">
                Celebrate the love and joy your pets brought into your life. Share their stories, relive precious moments, and keep their memory alive forever.
              </p>
              <div class="flex gap-4">
                <a href="/create-memorial" class="px-8 py-4 bg-primary-600 text-white rounded-full text-lg font-semibold hover:bg-primary-700 transform hover:scale-105 transition-all flex items-center gap-2">
                  Create a Memorial <HeartIcon class="w-4 h-4" />
                </a>
                <a href="/community" class="px-8 py-4 bg-white text-primary-600 rounded-full text-lg font-semibold hover:bg-primary-50 transform hover:scale-105 transition-all flex items-center gap-2">
                  Explore Memorials <UserGroupIcon class="w-4 h-4" />
                </a>
              </div>
            </div>
            <div class="hidden lg:block">
              <img 
                src="https://images.unsplash.com/photo-1548802673-380ab8ebc7b7?auto=format&fit=crop&w=1000&q=80"
                alt="Peaceful cat sleeping on soft pastel bedding" 
                class="rounded-3xl shadow-lg object-cover h-[400px] w-[90%] mx-auto opacity-90 transition-all duration-300 hover:opacity-100"
                style="filter: drop-shadow(0 0 10px rgba(0,0,0,0.1));"
              />
            </div>
          </div>
        </div>
      </section>

      {/* Ways to Honor Section */}
      <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Ways to Honor Your Pet's Memory</h2>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            <div class="bg-primary-50 p-8 rounded-2xl">
              <div class="flex items-center mb-4">
                <div class="w-4 h-4 mr-4">
                  <LockClosedIcon class="w-4 h-4 text-primary-600" />
                </div>
                <h3 class="text-xl font-bold text-gray-900">Safe and Private</h3>
              </div>
              <p class="text-gray-600">Your memories are protected and secure.</p>
            </div>
            
            <div class="bg-primary-50 p-8 rounded-2xl">
              <div class="flex items-center mb-4">
                <div class="w-4 h-4 mr-4">
                  <CameraIcon class="w-4 h-4 text-primary-600" />
                </div>
                <h3 class="text-xl font-bold text-gray-900">Preserve Every Moment</h3>
              </div>
              <p class="text-gray-600">Upload photos, videos, and stories to create a timeless tribute.</p>
            </div>
            
            <div class="bg-primary-50 p-8 rounded-2xl">
              <div class="flex items-center mb-4">
                <div class="w-4 h-4 mr-4">
                  <UserGroupIcon class="w-4 h-4 text-primary-600" />
                </div>
                <h3 class="text-xl font-bold text-gray-900">A Supportive Community</h3>
              </div>
              <p class="text-gray-600">Share your memories and connect with others who understand.</p>
            </div>
            
            <div class="bg-primary-50 p-8 rounded-2xl">
              <div class="flex items-center mb-4">
                <div class="w-4 h-4 mr-4">
                  <BookmarkIcon class="w-4 h-4 text-primary-600" />
                </div>
                <h3 class="text-xl font-bold text-gray-900">Accessible and Lasting</h3>
              </div>
              <p class="text-gray-600">Reflect, update, and share your pet's memorial anytime.</p>
            </div>
          </div>
        </div>
      </section>

      {/* How to Log Your Memories Section */}
      <section class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">How to Log Your Memories</h2>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
            {[
              { icon: SparklesIcon, title: 'Create', text: 'Create your pet\'s memorial with their name and photo.' },
              { icon: PhotoIcon, title: 'Add Memories', text: 'Add photos, videos, and written memories to personalize.' },
              { icon: EnvelopeIcon, title: 'Invite', text: 'Invite friends and family to contribute their tributes.' },
              { icon: HeartIcon, title: 'Visit', text: 'Visit the memorial anytime to reflect or update.' }
            ].map((step, index) => (
              <div class="text-center">
                <div class="relative mb-6">
                  <div class="w-16 h-16 mx-auto bg-primary-100 rounded-full flex items-center justify-center">
                    <span class="text-2xl">
                      {index === 0 ? '‚ú®' : 
                       index === 1 ? 'üì∏' : 
                       index === 2 ? '‚úâÔ∏è' : 
                       '‚ù§Ô∏è'}
                    </span>
                  </div>
                  <div class="absolute top-0 right-0 -mr-4 w-6 h-6 bg-secondary-100 rounded-full flex items-center justify-center">
                    <span class="text-sm font-bold">{index + 1}</span>
                  </div>
                </div>
                <h3 class="text-xl font-bold mb-3">{step.title}</h3>
                <p class="text-gray-600">{step.text}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      {/* Featured Memorials Section */}
      <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-900 mb-4" data-aos="fade-up">
              Featured Memorials <div class="w-4 h-4 inline-flex items-center ml-2">
                <HeartIcon class="w-3 h-3" />
              </div>
            </h2>
            <p class="text-xl text-gray-600" data-aos="fade-up" data-aos-delay="100">Discover touching tributes from our community</p>
          </div>

          <div class="relative overflow-hidden">
            <div class="memorial-scroll flex gap-8 py-4">
              {[...memorials, ...memorials].map((memorial, index) => (
                <div 
                  class="flex-none w-[300px]"
                  data-aos="fade-up" 
                  data-aos-delay={100 * (index % memorials.length)}
                >
                  <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="relative h-48">
                      <img 
                        src={memorial.image} 
                        alt={memorial.name} 
                        class="w-full h-full object-cover"
                      />
                    </div>
                    <div class="p-4">
                      <h3 class="text-xl font-semibold text-gray-900">{memorial.name}</h3>
                      <div class="mt-2 space-y-1">
                        <p class="text-sm text-gray-600">
                          Born: {new Date(memorial.dateOfBirth).toLocaleDateString()}
                        </p>
                        <p class="text-sm text-gray-600">
                          Passed: {new Date(memorial.dateOfPassing).toLocaleDateString()}
                        </p>
                      </div>
                      <div class="mt-3 flex items-center text-gray-600">
                        <div class="w-4 h-4 flex items-center">
                          <HeartIcon class="w-3 h-3" />
                        </div>
                        <span class="text-sm ml-1">{memorial.tribute_count} tributes</span>
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>

      {/* Testimonials Section */}
      <div class="bg-white rounded-3xl shadow-lg p-8 transition-transform transform hover:scale-105">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-8">
          What Our Users Say
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="bg-rose-50 rounded-xl p-6 shadow-md transition-transform transform hover:scale-105">
            <p class="text-gray-600 italic mb-4">
              "Furever has been a beautiful way to remember my beloved pet. The platform is so comforting and easy to use."
            </p>
            <h3 class="text-lg font-medium text-gray-900">- Alex P.</h3>
          </div>

          <div class="bg-rose-50 rounded-xl p-8 shadow-md transition-transform transform hover:scale-105">
            <p class="text-gray-600 italic mb-4">
              "I love how I can share memories with friends and family. It's a wonderful tribute to my furry friend."
            </p>
            <h3 class="text-lg font-medium text-gray-900">- Jamie L.</h3>
          </div>

          <div class="bg-rose-50 rounded-xl p-10 shadow-md transition-transform transform hover:scale-105">
            <p class="text-gray-600 italic mb-4">
              "The guestbook feature is amazing. Seeing messages from loved ones brings so much comfort."
            </p>
            <h3 class="text-lg font-medium text-gray-900">- Taylor R.</h3>
          </div>
        </div>
      </div>

      {/* Closing CTA Section */}
      <section class="py-20 rainbow-bg relative overflow-hidden">
        <div class="floating-pets absolute inset-0 pointer-events-none opacity-50">
          <div class="pet-element" style="top: 20%; left: 10%;">üêæ</div>
          <div class="pet-element" style="top: 40%; left: 85%;">üê±</div>
          <div class="pet-element" style="top: 60%; left: 15%;">üêï</div>
          <div class="pet-element" style="top: 80%; left: 75%;">ü¶¥</div>
        </div>
        <div class="max-w-4xl mx-auto px-4 text-center">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Ready to Create a Timeless Tribute?</h2>
          <p class="text-xl text-gray-600 mb-8">They may no longer be by your side, but they'll always live on in your heart.</p>
          <a 
            href="/create-memorial" 
            class="inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white rounded-full text-base font-semibold hover:bg-primary-700 transform hover:scale-105 transition-all gap-2"
          >
            Create Your Memorial 
            <div class="w-4 h-4 flex items-center">
              <SparklesIcon class="w-3 h-3" />
            </div>
          </a>
        </div>
      </section>

    </div>
  </div>
</Layout>
<style>
  .memorial-scroll {
    animation: scroll 60s linear infinite;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .memorial-scroll:hover {
    animation-play-state: paused;
  }

  /* Add rainbow gradient background with low opacity */
  .rainbow-bg {
    background: linear-gradient(
      135deg,
      rgba(255, 183, 197, 0.1),  /* Soft pink */
      rgba(255, 218, 185, 0.1),  /* Peach */
      rgba(255, 255, 186, 0.1),  /* Light yellow */
      rgba(201, 255, 191, 0.1),  /* Mint green */
      rgba(191, 228, 255, 0.1),  /* Light blue */
      rgba(223, 191, 255, 0.1)   /* Lavender */
    );
  }

  /* Floating pet elements animation */
  .floating-pets {
    position: relative;
    overflow: hidden;
  }

  .pet-element {
    position: absolute;
    opacity: 0.1;
    animation: float 20s infinite linear;
  }

  .pet-element:nth-child(odd) {
    animation-duration: 25s;
    animation-direction: reverse;
  }

  @keyframes float {
    0% {
      transform: translate(-100%, -100%) rotate(0deg);
    }
    100% {
      transform: translate(100vw, 100vh) rotate(360deg);
    }
  }

  /* Add subtle gradient to cards */
  .memorial-card {
    background: linear-gradient(
      45deg,
      rgba(255, 255, 255, 0.9),
      rgba(255, 255, 255, 0.95)
    );
    backdrop-filter: blur(8px);
  }
</style>
