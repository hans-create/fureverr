<style>
  .memorial-scroll {
    overflow: hidden;
    position: relative;
    width: 100%;
  }

  .animate-scroll {
    animation: scroll 40s linear infinite;
    width: max-content;
  }

  .animate-scroll:hover {
    animation-play-state: paused;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-300px * 3 - 2rem * 3)); /* Width of 3 cards + gaps */
    }
  }

  .memorial-card {
    transition: all 0.3s ease;
  }

  .memorial-card:hover {
    transform: translateY(-5px);
  }

  /* Hide scrollbar */
  .memorial-scroll::-webkit-scrollbar {
    display: none;
