---
import Layout from '../layouts/Layout.astro';
import { MagnifyingGlassIcon, HeartIcon, ChatBubbleLeftIcon } from '@heroicons/react/24/outline';

const mockPetMemories = [
  {
    id: 1,
    petName: 'Max',
    petType: 'Dog',
    breed: 'Golden Retriever',
    ownerName: 'Sarah',
    image: 'https://images.unsplash.com/photo-1552053831-71594a27632d?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60',
    description: 'Forever in our hearts, the goodest boy who loved tennis balls.',
    likes: 124,
    comments: 45,
    date: '2024-02-15'
  },
  {
    id: 2,
    petName: 'Luna',
    petType: 'Cat',
    breed: 'Siamese',
    ownerName: 'Michael',
    image: 'https://images.unsplash.com/photo-1513360371669-4adf3dd7dff8?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60',
    description: 'My little princess who ruled the house with grace.',
    likes: 89,
    comments: 32,
    date: '2024-02-10'
  },
  {
    id: 3,
    petName: 'Charlie',
    petType: 'Bird',
    breed: 'Macaw',
    ownerName: 'Emily',
    image: 'https://images.unsplash.com/photo-1552728089-57bdde30beb3?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60',
    description: 'The most colorful soul who brightened every day.',
    likes: 67,
    comments: 28,
    date: '2024-02-08'
  }
];
---

<Layout title="Community">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Furever Community</h1>
      <p class="text-xl text-gray-600">A safe space for healing, understanding, and remembrance.</p>
    </div>

    {/* Your Memorial, Your Choice Section - Moved Above Search */}
    <div class="max-w-3xl mx-auto bg-white rounded-2xl shadow-lg p-8 mb-12">
      <div class="text-center space-y-6">
        <span class="text-5xl">üíù</span>
        <h2 class="text-2xl font-semibold text-gray-900">Your Memorial, Your Choice</h2>
        <p class="text-gray-600">
          We understand that memories of our beloved pets are deeply personal. Your memorial can be kept private, 
          shared with close friends and family, or opened to our caring community when you feel ready.
        </p>
      </div>
    </div>

    {/* Search Section - Minimal Size */}
    <div class="max-w-4xl mx-auto mb-12">
      <div class="flex items-center gap-4">
        {/* Name Search - Smaller Size */}
        <div class="relative w-[40px]">
          <MagnifyingGlassIcon class="absolute left-2 top-1/2 transform -translate-y-1/2 w-3 h-3 text-gray-400" />
          <input 
            type="text" 
            placeholder="Search by pet name"
            class="w-full pl-6 pr-2 py-1.5 border border-gray-200 focus:ring-0 focus:border-gray-300 bg-transparent text-sm"
          />
        </div>

        {/* Pet Type Filter - Smaller Size */}
        <select class="w-[40px] px-2 py-1.5 border border-gray-200 focus:ring-0 focus:border-gray-300 bg-transparent appearance-none cursor-pointer text-sm">
        {/* Pet Type Filter - 50px width */}
        <select class="w-[50px] px-4 py-2 border border-gray-200 focus:ring-0 focus:border-gray-300 bg-transparent appearance-none cursor-pointer">
          <option value="">All Pet Types</option>
          <option value="dog">Dogs</option>
          <option value="cat">Cats</option>
          <option value="bird">Birds</option>
          <option value="other">Other Pets</option>
        </select>

        {/* Sort By - 50px width */}
        <select class="w-[50px] px-4 py-2 border border-gray-200 focus:ring-0 focus:border-gray-300 bg-transparent appearance-none cursor-pointer">
          <option value="recent">Most Recent</option>
          <option value="popular">Most Popular</option>
          <option value="likes">Most Liked</option>
        </select>
      </div>
    </div>

    {/* Pet Memory Cards */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {mockPetMemories.map(memory => (
        <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
          <img 
            src={memory.image} 
            alt={memory.petName} 
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <div class="flex justify-between items-start mb-2">
              <div>
                <h3 class="text-xl font-semibold text-gray-900">{memory.petName}</h3>
                <p class="text-sm text-gray-500">{memory.petType} ‚Ä¢ {memory.breed}</p>
              </div>
              <span class="text-sm text-gray-500">{new Date(memory.date).toLocaleDateString()}</span>
            </div>
            <p class="text-gray-600 mb-4">{memory.description}</p>
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4">
                <button class="flex items-center gap-1 text-gray-500 hover:text-rose-500 transition-colors">
                  <HeartIcon class="w-5 h-5" />
                  <span>{memory.likes}</span>
                </button>
                <button class="flex items-center gap-1 text-gray-500 hover:text-primary-600 transition-colors">
                  <ChatBubbleLeftIcon class="w-5 h-5" />
                  <span>{memory.comments}</span>
                </button>
              </div>
              <span class="text-sm text-gray-500">By {memory.ownerName}</span>
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="bg-gradient-to-r from-primary-100 to-secondary-100 rounded-lg p-8 mb-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Support Groups</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md relative">
          <h3 class="text-xl font-semibold mb-2">Dog Lovers</h3>
          <p class="text-gray-600">Find comfort with others who understand the special bond with dogs.</p>
          <span class="absolute top-4 right-4 text-sm text-primary-600">Coming Soon</span>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md relative">
          <h3 class="text-xl font-semibold mb-2">Cat Corner</h3>
          <p class="text-gray-600">Share memories of your feline companions when you're ready.</p>
          <span class="absolute top-4 right-4 text-sm text-primary-600">Coming Soon</span>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md relative">
          <h3 class="text-xl font-semibold mb-2">All Pets Welcome</h3>
          <p class="text-gray-600">A gentle space for all pet parents on their healing journey.</p>
          <span class="absolute top-4 right-4 text-sm text-primary-600">Coming Soon</span>
        </div>
      </div>
    </div>

    <div class="text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Healing Resources</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md relative">
          <h3 class="text-xl font-semibold mb-2">Grief Support</h3>
          <p class="text-gray-600">Professional resources and guidance for your healing journey.</p>
          <span class="absolute top-4 right-4 text-sm text-primary-600">Coming Soon</span>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md relative">
          <h3 class="text-xl font-semibold mb-2">Local Services</h3>
          <p class="text-gray-600">Find compassionate support groups and services near you.</p>
          <span class="absolute top-4 right-4 text-sm text-primary-600">Coming Soon</span>
        </div>
      </div>
      <p class="mt-8 text-gray-600 italic">
        We're carefully building these resources to ensure we provide the best support for our community.
        Check back soon for updates.
      </p>
    </div>
  </div>
</Layout>

