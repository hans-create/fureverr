---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Support - Furever">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Support Center</h1>
    
    <div class="space-y-12">
      {/* Getting Started */}
      <section>
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Getting Started</h2>
        <div class="space-y-4">
          <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-2">Creating a Memorial</h3>
            <p class="text-gray-600">Step-by-step guide...</p>
          </div>
          {/* More getting started items */}
        </div>
      </section>

      {/* FAQ */}
      <section>
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Frequently Asked Questions</h2>
        <div class="space-y-4">
          {/* FAQ items */}
        </div>
      </section>

      {/* Contact */}
      <section>
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Contact Us</h2>
        <div class="bg-white rounded-lg shadow p-6">
          {/* Contact form or info */}
        </div>
      </section>
    </div>
  </div>
</Layout> 