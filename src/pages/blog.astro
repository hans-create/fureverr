---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog">
  <div class="max-w-7xl mx-auto px-4 py-12">
    {/* Title Section */}
    <div class="text-center mb-16">
      <h1 class="text-4xl font-bold text-gray-900">Furever Blog</h1>
    </div>

    {/* Main Content Card */}
    <div class="max-w-3xl mx-auto">
      {/* Topics List */}
      <div class="grid md:grid-cols-2 gap-x-12 gap-y-6 mb-16">
        <div class="border-l-2 border-red-500/20 pl-6">
          <h3 class="font-medium text-gray-900 mb-2">Coping with Pet Loss</h3>
          <p class="text-sm text-gray-500">Resources and guidance for your healing journey</p>
        </div>
        
        <div class="border-l-2 border-red-500/20 pl-6">
          <h3 class="font-medium text-gray-900 mb-2">Creating Meaningful Memorials</h3>
          <p class="text-sm text-gray-500">Ways to honor and remember your beloved pets</p>
        </div>
        
        <div class="border-l-2 border-red-500/20 pl-6">
          <h3 class="font-medium text-gray-900 mb-2">Understanding the Rainbow Bridge</h3>
          <p class="text-sm text-gray-500">Finding comfort in shared beliefs and traditions</p>
        </div>
        
        <div class="border-l-2 border-red-500/20 pl-6">
          <h3 class="font-medium text-gray-900 mb-2">Stories from Our Community</h3>
          <p class="text-sm text-gray-500">Shared experiences from fellow pet parents</p>
        </div>
      </div>

      {/* Newsletter Section */}
      <div class="bg-gray-50 rounded-xl p-8">
        <div class="text-center mb-6">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Stay Updated</h3>
          <p class="text-gray-600">Be the first to know when we launch our blog and receive helpful resources.</p>
        </div>
        
        <form class="max-w-md mx-auto">
          <div class="flex gap-3">
            <input
              type="email"
              placeholder="Enter your email"
              class="flex-1 px-4 py-2 rounded-full border-gray-200 focus:ring-red-500 focus:border-red-500"
            />
            <button
              type="submit"
              class="px-6 py-2 bg-red-500 text-white rounded-full hover:bg-red-600 transition-colors"
            >
              Subscribe
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</Layout>