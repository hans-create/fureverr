---
const navItems = [
  { label: 'Home', href: '/' },
  { label: 'Create a Memorial', href: '/create-memorial' },
  { label: 'Pet Memory', href: '/pet-memory-blog' },
  { label: 'Community', href: '/community' },
  { label: 'Blog', href: '/blog' },
  { label: 'Pricing', href: '/pricing' },
];
---

<nav class="bg-white shadow-sm">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      {/* Left side - Logo and nav links */}
      <div class="flex items-center space-x-8">
        <a href="/" class="text-2xl font-bold text-primary-600">
          Furever
        </a>
        
        <div class="hidden md:flex space-x-6">
          <a href="/" class="text-gray-600 hover:text-gray-900">Home</a>
          <a href="/create-memorial" class="text-gray-600 hover:text-gray-900">Create a Memorial</a>
          <a href="/pet-memory-blog" class="text-gray-600 hover:text-gray-900">Pet Memory</a>
          <a href="/community" class="text-gray-600 hover:text-gray-900">Community</a>
          <a href="/blog" class="text-gray-600 hover:text-gray-900">Blog</a>
          <a 
            href="/pricing" 
            class="text-gray-600 hover:text-gray-900 text-sm font-medium"
          >
            Pricing
          </a>
        </div>
      </div>

      {/* Right side - Auth buttons */}
      <div class="flex items-center space-x-4">
        <button 
          class="px-4 py-2 text-gray-600 hover:text-gray-900"
          onclick="showAuthModal('login')"
        >
          Log in
        </button>
        <button 
          class="px-4 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700"
          onclick="showAuthModal('signup')"
        >
          Sign up
        </button>
      </div>

      {/* Mobile menu button */}
      <div class="md:hidden">
        <button 
          id="mobile-menu-button"
          class="text-gray-600 hover:text-gray-900"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    {/* Mobile menu */}
    <div id="mobile-menu" class="hidden md:hidden py-4">
      <div class="flex flex-col space-y-2">
        <a href="/" class="text-gray-600 hover:text-gray-900 px-4 py-2">Home</a>
        <a href="/create-memorial" class="text-gray-600 hover:text-gray-900 px-4 py-2">Create a Memorial</a>
        <a href="/pet-memory-blog" class="text-gray-600 hover:text-gray-900 px-4 py-2">Pet Memory</a>
        <a href="/community" class="text-gray-600 hover:text-gray-900 px-4 py-2">Community</a>
        <a href="/blog" class="text-gray-600 hover:text-gray-900 px-4 py-2">Blog</a>
        <hr class="my-2 border-gray-200" />
        <button 
          class="text-gray-600 hover:text-gray-900 px-4 py-2 text-left"
          onclick="showAuthModal('login')"
        >
          Log in
        </button>
        <button 
          class="text-gray-600 hover:text-gray-900 px-4 py-2 text-left"
          onclick="showAuthModal('signup')"
        >
          Sign up
        </button>
      </div>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  });

  // Auth modal handler (placeholder function)
  function showAuthModal(type: 'login' | 'signup') {
    console.log(`Show ${type} modal`);
    // You can implement actual modal functionality here
    // or navigate to login/signup pages
  }
</script>

<style>
  /* Add any custom styles here */
  .mobile-menu-enter {
    opacity: 0;
    transform: scale(0.95);
  }

  .mobile-menu-enter-active {
    opacity: 1;
    transform: scale(1);
    transition: opacity 100ms ease-out, transform 100ms ease-out;
  }

  .mobile-menu-exit {
    opacity: 1;
    transform: scale(1);
  }

  .mobile-menu-exit-active {
    opacity: 0;
    transform: scale(0.95);
    transition: opacity 75ms ease-in, transform 75ms ease-in;
  }
</style>