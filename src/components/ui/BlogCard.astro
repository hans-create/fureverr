---
interface Props {
  title: string;
  excerpt: string;
  date: string;
  image: string;
  category: string;
}

const { title, excerpt, date, image, category } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden" data-aos="fade-up">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <div class="text-sm text-primary-600 mb-2">{category}</div>
    <h3 class="text-xl font-semibold text-gray-900 mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{excerpt}</p>
    <div class="flex justify-between items-center">
      <span class="text-sm text-gray-500">{date}</span>
      <a href={`/blog/${title.toLowerCase().replace(/ /g, '-')}`} class="text-primary-600 hover:text-primary-700">
        Read more â†’
      </a>
    </div>
  </div>
</article>