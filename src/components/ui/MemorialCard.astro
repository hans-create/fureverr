---
import PetIcon from './PetIcon.astro';

interface Props {
  name: string;
  type: 'dog' | 'cat' | 'bird' | 'rabbit' | 'hamster' | 'fish';
  tribute_count: number;
  image?: string;
}

const { name, type, tribute_count, image } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105" data-aos="fade-up">
  <div class="relative h-48 bg-gradient-to-r from-primary-100 to-secondary-100">
    {image ? (
      <img src={image} alt={name} class="w-full h-full object-cover" />
    ) : (
      <div class="absolute inset-0 flex items-center justify-center">
        <PetIcon type={type} class="text-6xl" />
      </div>
    )}
  </div>
  <div class="p-4">
    <h3 class="text-xl font-semibold text-gray-900">{name}</h3>
    <div class="mt-2 flex items-center text-gray-600">
      <span class="text-sm">💝 {tribute_count} tributes</span>
    </div>
    <a href={`/memorial/${name.toLowerCase()}`} class="mt-3 block text-center px-4 py-2 bg-primary-100 text-primary-700 rounded-md hover:bg-primary-200 transition-colors">
      View Memorial
    </a>
  </div>
</div>